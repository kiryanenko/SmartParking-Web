<div class="container h-100">
  <div class="row h-100">
    <div class="col-4 m-auto text-center">
      <h1 class="mb-3"><%= t :sign_up %></h1>
      <% if resource.errors %>
        <%= render partial: 'components/alert', locals: { msg: "Обнаружено #{resource.errors.count} ошибок", color: 'danger' } %>
        <% resource.errors.messages[:base].each do |e| %>
          <%= render partial: 'components/alert', locals: { msg: e, color: 'danger' } %>
        <% end %>
      <% end %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupPrepend">@</span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                              class: "form-control #{'is-invalid' unless resource.errors[:email].empty? }",
                              placeholder: 'email@example.com', required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t :password %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: :password %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %> <%= t :characters_minimum %>)</small>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label t :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: :password %>
        </div>

        <div class="form-group">
          <%= f.label t :full_name %>
          <%= f.text_field :full_name, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: t(:full_name_example)  %>
        </div>

        <div class="form-group">
          <%= f.label t :phone %>
          <%= f.text_field :phone, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: '+7 (555) 555-55-55'  %>
        </div>

        <div class="my-4">
          <%= f.submit t(:sign_up), class: 'btn btn-primary btn-block btn-lg' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <p class="mt-5 text-muted">© 2017-2018</p>
    </div>
  </div>
</div>